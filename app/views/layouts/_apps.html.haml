.pin#apps
  .head
    %h3 Apps

  .body
    #misc
      .head
        %h3 Misc

      .body
        - @apps[:apps].each do |name, color|
          .item
            %a{:href => name.downcase, :style => "background: #{color}"}
              = image_tag("apps/#{name.downcase}.svg")

            %h4= name

    #games
      .head
        %h3 Games

      .body
        - @apps[:games].each do |name|
          %a{:href => name.downcase}
            = image_tag("apps/#{name.downcase}.png")
